<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showDividers="middle"
    android:background="#fff"
    tools:context="com.beswell.beswell_al.SetPostOps">

    <ScrollView
        android:id="@+id/set_cont"
        android:layout_above="@+id/set_divider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <!--1-->
            <TextView
                android:id="@+id/shopName"
                android:text=" 公司名称"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_alignParentLeft="false"
                android:gravity="center_vertical"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/set_shopname"
                android:layout_below="@+id/shopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:background="#888"
                android:textColor="#fff"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="13dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:minHeight="25dp" />

            <!--2-->
            <TextView
                android:id="@+id/person"
                android:layout_below="@+id/set_shopname"
                android:text=" 联系人"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textColor="#000"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="26px"
                android:textSize="16sp" />
            <EditText
                android:layout_below="@+id/person"
                android:id="@+id/set_contactperson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#888"
                android:textSize="16sp"
                android:textColor="#fff"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="13dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:minHeight="25dp" />

            <!--3-->
            <TextView
                android:layout_below="@+id/set_contactperson"
                android:id="@+id/phone"
                android:text=" 联系电话"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textColor="#000"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="26px"
                android:textSize="16sp" />
            <EditText
                android:layout_below="@+id/phone"
                android:id="@+id/set_contactphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#888"
                android:textSize="16sp"
                android:textColor="#fff"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="13dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:minHeight="25dp" />

            <!--4-->
            <TextView
                android:layout_below="@+id/set_contactphone"
                android:id="@+id/address"
                android:text=" 详细地址"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:typeface="monospace"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="26px"
                android:textSize="16sp" />
            <EditText
                android:layout_below="@+id/address"
                android:id="@+id/set_shoploc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#888"
                android:textSize="16sp"
                android:textColor="#fff"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="13dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:minHeight="25dp" />

            <!--5-->
            <TextView
                android:layout_below="@+id/set_shoploc"
                android:id="@+id/aa"
                android:text=" A卡 外观洗车 消费次数"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textColor="#000"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="26px"
                android:textSize="16sp" />
            <EditText
                android:layout_below="@+id/aa"
                android:id="@+id/set_cca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#888"
                android:textSize="16sp"
                android:textColor="#fff"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="13dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:minHeight="25dp"
                android:gravity="start" />

            <!--6-->
            <TextView
                android:layout_below="@+id/set_cca"
                android:id="@+id/as"
                android:text=" A卡 标准洗车 消费次数"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:typeface="monospace"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="26px"
                android:textSize="16sp" />
            <EditText
                android:layout_below="@+id/as"
                android:id="@+id/set_cca2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#888"
                android:textSize="16sp"
                android:textColor="#fff"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="13dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:minHeight="25dp" />

            <!--7-->
            <TextView
                android:layout_below="@+id/set_cca2"
                android:id="@+id/bs"
                android:text=" B卡 标准洗车 消费次数"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textColor="#000"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="26px"
                android:textSize="16sp" />
            <EditText
                android:layout_below="@+id/bs"
                android:id="@+id/set_ccb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#888"
                android:textSize="16sp"
                android:textColor="#fff"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="13dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:minHeight="25dp" />

            <!--8-->
            <TextView
                android:layout_below="@+id/set_ccb"
                android:background="#fff"
                android:id="@+id/state"
                android:text=" 申请状态"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:typeface="monospace"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="26px"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="16sp" />

            <EditText
                android:layout_below="@+id/state"
                android:editable="false"
                android:id="@+id/set_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#888"
                android:textSize="16sp"
                android:textColor="#fff"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="13dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:minHeight="25dp" />


        </RelativeLayout>

    </ScrollView>

    <ImageView
        android:layout_above="@+id/set_confirm"
        android:id="@+id/set_divider"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#fff"/>

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/set_confirm"
        android:text="提交申请"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/set_query"
        android:textColor="#fff"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/cr_infoq"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/cr_infoq"
        android:gravity="bottom|center_horizontal"
        android:text="© 2015 Beswell.com 百维阳光汽车服务"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
