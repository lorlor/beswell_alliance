<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="#228b22"/>

            <corners
                android:radius="14px"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#228b22"/>

            <stroke
                android:color="#fff"
                android:width="2dp"/>

            <corners
                android:radius="14px"/>
        </shape>
    </item>
</selector>