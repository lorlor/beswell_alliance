<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="#1c86ee"/>

            <corners
                android:radius="12px"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#1c86ee"/>
            <corners
                android:radius="12px"/>
            <stroke
                android:color="#fff"
                android:width="2dp"/>
        </shape>
    </item>

</selector>